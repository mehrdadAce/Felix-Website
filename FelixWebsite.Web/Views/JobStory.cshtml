@inherits Umbraco.Web.Mvc.UmbracoTemplatePage<Story>
@{
    Layout = "Shared/Master.cshtml";
}   
@Styles.Render("~/Content/Socials")
<link rel="stylesheet" type="text/css" href="~/css/felix-joboffers.css">

<section id="joboffer" class="margin-top-120">
    <div class="header-img" style="background-image: url('@(Model.Content.Img.Src + Model.Content.Img.GetCropUrl("Full width banner"))');"></div>
    <div class="container">
        <div class="row">
            <div class="col-sm-8 margin-top-50 margin-bottom-50 competences">
                <div class="section-title">
                    <h1>@Model.Content.Name</h1>
                </div>
                @Html.Raw(@Model.Content.Article.ToHtmlString())

            </div>
            <div class="col-sm-4 margin-top-50 ">
                <div id="share-on-social-media"></div>
            </div>
        </div>
    </div>
    @Html.Partial("CallToAction/CallToAction", Model)
</section>
@Scripts.Render("~/Js/Socials")

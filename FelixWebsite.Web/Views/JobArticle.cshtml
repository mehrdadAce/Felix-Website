@inherits Umbraco.Web.Mvc.UmbracoTemplatePage<JobArticle>
@using System.Web.Optimization;
@{
    Layout = "Shared/Master.cshtml";
}
@Styles.Render("~/Content/Socials")
<link rel="stylesheet" type="text/css" href="~/css/felix-joboffers.css">
<section id="joboffer" class="margin-top-120">
    <div class="header-img" style="background-image: url('@(Model.Content.Img.Src + Model.Content.Img.GetCropUrl("Full width banner"))');"></div>
    <div class="container">
        <div class="row">
            @if (Model.Content.Children().Count() > 0)
            {
                <div class="col-sm-8 margin-top-50 margin-bottom-50 competences">
                    <div class="section-title">
                        <h1>@Model.Content.Name</h1>
                    </div>
                    @Html.Raw(@Model.Content.Article.ToHtmlString())
                    <div id="share-on-social-media" class="margin-top-30"></div>
                </div>
                <div class="col-sm-4 margin-top-50 margin-bottom-50">
                    <div class="section-title">
                        <h1>Lees meer</h1>
                    </div>
                    @foreach (var jobarticle in Model.Content.Children().OfType<JobArticle>())
                    {
                        <div class="col-sm-12 margin-bottom-30">
                            @Html.Partial("JobSite/Articles/Item", jobarticle)
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="col-sm-8 col-sm-offset-2 margin-top-50 margin-bottom-50 competences">
                    <div class="section-title">
                        <h1>@Model.Content.Name</h1>
                    </div>
                    @Html.Raw(@Model.Content.Article.ToHtmlString())
                    <div id="share-on-social-media" class="margin-top-30"></div>
                </div>
            }
        </div>
    </div>
    @Html.Partial("CallToAction/CallToAction", Model)
</section>
@Scripts.Render("~/Js/Socials")
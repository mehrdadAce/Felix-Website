@inherits Umbraco.Web.Mvc.UmbracoTemplatePage<ContentModels.Errorpage>
@using ContentModels = Umbraco.Web.PublishedContentModels;
@using FelixWebsite.Core.App_GlobalResources;
@using FelixWebsite.Core.Helpers
@{
    Layout = "Shared/Master.cshtml";
}
<link rel="stylesheet" type="text/css" href="~/css/felix-errors.css">
@{
    var linkHome = Session.GetBreadcrumbRoot(Umbraco.AssignedContentItem);
}
<style>
    body {
        background: linear-gradient(0deg,rgba(255,255,255, 0.7),rgba(255,255,255, 0.7)),url('@Model.Content.Background.Url') no-repeat center;
        background-size: cover;
    }
</style>
<div class="container v-center">
    <div class="col-sm-6 col-sm-offset-3">
        <div class="panel panel-default">
            <div class="panel-body">
                <h1 class="margin-bottom-30 margin-top-30 text-center">@Model.Content.Title</h1>
                <h4 class="margin-bottom-30 margin-top-30 text-center">@Model.Content.Subtitle</h4>
                <div class="row">
                    <div class="col-sm-6">
                        <a class="link-button" href="@linkHome.UrlAbsolute()">@FelixResources.general_HomePage</a>
                    </div>
                    <div class="col-sm-6">
                        <a class="link-button" href="#" onclick="GoToPreviousPage();return false;">@FelixResources.general_goToPreviousPage</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">function GoToPreviousPage() { window.history.back(); }</script>
@using FelixWebsite.Core.App_GlobalResources

@* Contact feedback (contact) *@
@if (TempData[FelixResources.temp_is_contact_success] != null)
{
    if ((bool)TempData[FelixResources.temp_is_contact_success] == true)
    {
        <script>toastr.success('@FelixResources.notification_contact_success_message', '@FelixResources.notification_success_title')</script>
    }
    else
    {
        <script>toastr.error('@FelixResources.notification_contact_error_message', '@FelixResources.notification_error_title')</script>
    }
    TempData[FelixResources.temp_is_contact_success] = null;
}

